<RelativeLayout
    android:id="@+id/outer_layout"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#6f263d"
    android:layout_width="match_parent">
    <!--<ImageView-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp" />-->
    <com.example.zingdemodraggable.view.DragLayout
        android:id="@+id/drag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffcec4">

        <VideoView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--<ImageView-->
            <!--android:id="@+id/second_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorAccent"-->
            <!--android:layout_below="@id/main_image"/>-->

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#c1d6a7"
            android:weightSum="3"
            android:layout_below="@+id/main_image"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is the title of the movie whether its"
                    />
                <TextView
                    android:id="@+id/episode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"
                    />
                <TextView
                    android:id="@+id/releaseDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.example.zingdemodraggable.view.DragLayout>

</RelativeLayout>
